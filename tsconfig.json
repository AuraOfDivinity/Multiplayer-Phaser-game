{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "noEmitOnError": false,
        "noEmit": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"
    },
    "include": ["src"],
    "exclude": ["node_modules", "*.spec.ts"]
}