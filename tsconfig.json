{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "noEmitOnError": false,
    "rootDir": "./src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "typeRoots": [
    "./node_modules/@types",
    "./node_modules/phaser-ce/typescript/"
  ],
  "files": ["src/server/server.ts"],
  "exclude": ["node_modules", "*.spec.ts"],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}
